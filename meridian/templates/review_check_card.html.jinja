<card>
  <div style="display: flex; justify-content: space-between; align-items: center; padding-right: 32px;">
    <card-title>
      {{ check_name }}
    </card-title>
    <chip class="{{ status|lower }}">
      {{ status }}
    </chip>
  </div>

  {% if recommendation %}
    <card-insights>
      <card-insights-icon>
        <img src="https://www.gstatic.com/images/icons/material/system/svg/insights_24px.svg"
              alt="insights icon" />
      </card-insights-icon>
      <p>{{ recommendation }}</p>
    </card-insights>
  {% endif %}

  {% if content %}
    <div style="padding: 20px 32px;">
      {{ content }}
    </div>
  {% endif %}
</card>
